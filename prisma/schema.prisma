// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Produto {
  id        Int      @id @default(autoincrement())
  nome      String
  descricao String?
  preco     Float
  estoque   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}